  class="max-h-16 max-sm:h-10 animate-text-logo drop-shadow-[0_0px_10px_rgba(254,57,164,1)]"
/>
<style>
  .animate-center-to-right {
    animation: center-to-right 1s ease-in-out 1s forwards;
  }

  .animate-center-to-left {
    animation: center-to-left 1s ease-in-out 1s forwards;
  }

  .animate-transparency-to-opaque {
    opacity: 0;
    animation: transparency-to-opaque 1s ease-in 2s forwards;
  }

  .animate-text-logo {
    opacity: 0;
    animation: transparency-to-opaque 1s ease-in 3s forwards;
  }

  @keyframes transparency-to-opaque {
    0% {
      opacity: 0;
    }
    100% {
      opacity: 1;
    }
  }

  @keyframes center-to-right {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(40%);
    }
  }

  @keyframes center-to-left {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-40%);
    }
  }
</style>
